<?xml version="1.0"?>
<launch>
	<arg name="robot" default="localhost" doc="the hostname of the turtlebot" />
	<machine name="turtlebot" address="$(arg robot)" user="ubuntu" env-loader="/home/ubuntu/loader.sh"/>
	<!-- citation start source: http://wiki.ros.org/rosserial_python accessed Feb 5, 2021 -->
	<node pkg="rosserial_python" type="serial_node.py" name="serial_node">
		<param name="port" value="/dev/ttyACM0"/>
		<param name="baud" value="115200"/>
	</node>
	<!-- citation end source: http://wiki.ros.org/rosserial_python accessed Feb 5, 2021 -->
</launch>
